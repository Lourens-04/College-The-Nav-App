<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#061C29"
    tools:context=".Settings">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbSignUp"
        android:layout_width="413dp"
        android:layout_height="80dp"
        android:background="#FF3E8284"
        android:minHeight="?attr/actionBarSize"
        android:paddingLeft="22dp"
        android:textAlignment="textStart"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title=" Settings"
        app:titleMarginStart="106dp"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Display1"
        app:titleTextColor="#FFFFFF" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="320dp"
        android:clickable="true"
        app:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tbSignUp"
        app:layout_constraintEnd_toEndOf="@+id/tbSignUp"
        app:layout_constraintStart_toStartOf="@+id/tbSignUp"
        app:layout_constraintTop_toTopOf="@+id/tbSignUp"
        app:srcCompat="@drawable/mapbox_ic_arrow_back" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/textfield_style"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbSignUp">


        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/txvUsername"
            android:layout_width="342dp"
            android:layout_height="122dp"
            android:gravity="center"
            android:textColor="#F1D052"
            android:textSize="30sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="49dp" />

        <Button
            android:id="@+id/btnViewRoutesCompleted"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_style"
            android:text="Routes Taken"
            android:textColor="@color/mapboxWhite" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_style"
            android:text="Edit Profile"
            android:textColor="@color/mapboxWhite" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="31dp" />

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_style"
            android:text="Sign Out"
            android:textColor="@color/mapboxWhite" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>